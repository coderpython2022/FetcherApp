{
    "version": 2,
    "functions": {
        "api/*.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "builds": [
        {
            "src": "FetcherApp/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "FetcherApp/wsgi.py"
        }
    ]
}